<button
  @click="animal = '{{ animal_type }}'"
  class="w-[236px] px-4 py-2 text-lg font-semibold transition-colors duration-300 flex flex-col items-center justify-center gap-2 relative underline-animate {{ underline_direction }}"
  :class="animal === '{{ animal_type }}' ? 'text-blue-600 underline-animate-active' : 'text-gray-500'"
>
  {% render icon %}
  {{ animal_label }}
</button>

<style>
  .underline-animate::before {
    content: '';
    display: block;
    width: 100%;
    height: 4px;
    background-color: currentColor;
    transition: transform 0.3s ease;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: scaleX(0%);
  }
  .underline-animate-left::before {
    transform-origin: left;
  }
  .underline-animate-right::before {
    transform-origin: right;
  }
  .underline-animate-active::before {
    transform: scaleX(100%);
  }
</style>
